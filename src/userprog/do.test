#!/bin/bash
# Script to run custom selection of tests in build/tests/userprog

dir=tests/userprog

# Runs these tests
declare -a tests=(args-single) # args-none args-single)
  
for test in "${tests[@]}"
do
  echo "Running $test"
  resfile=$dir/$test.result
  errfile=$dir/$test.errors
  outfile=$dir/$test.output

  cd build
  /bin/rm $resfile $errfile $outfile > /dev/null
  make $resfile

  cd ..

done
